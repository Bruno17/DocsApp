<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu|Ubuntu+Condensed" rel="stylesheet">
    <title>{% block title %}Welcome to the MODX Documentation{% endblock %} | MODX Documentation</title>
    {% block meta %}{% endblock %}
    <link rel="stylesheet" href="{{ settings.directory }}assets/dist/app.css">
    {% block stylesheets %}{% endblock %}
</head>
<body>

<header class="header">
    <div class="header__inner">
        <div class="logo header__logo">
            <a class="logo__link" href="{{ path_for('home') }}" title="MODX Documentation">
                <img class="logo__img" src="https://modx.com/assets/design/css/images/modx-logo-color.svg" alt="MODX Logo">
            </a>
        </div>
        <nav class="header__menu mainMenu">
            <ul class="mainMenu__wrap">
            {% for item in topnav %}
                <li class="mainMenu__item"><a class="mainMenu__link" href="{{ item.uri }}" class="nav-item">{{ item.title }}</a></li>
            {% endfor %}
            </ul>
        </nav>
    </div>
</header>

{% block container %}
<div class="container">
    <div class="content-container">
        {% block content %}
            <div class="content">
                <h1>{{ page.title }}</h1>
                <p style="font-size: 1.1em;">{{ page.introduction }}</p>
            </div>
        {% endblock %}
    </div>
</div>
{% endblock %}

{% block scripts %}{% endblock %}

</body>
</html>
